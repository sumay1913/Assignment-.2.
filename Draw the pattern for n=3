#include <stdio.h>

int main() {
    int rows = 5; // Number of rows for the pattern

    for (int i = 1; i <= rows; i++) {
        // Print spaces for alignment
        for (int j = 1; j < i; j++) {
            printf(" ");
        }
        // Print asterisks
        for (int k = 1; k <= i; k++) {
            printf("* ");
        }
        printf("\n");
    }

    return 0;
}
