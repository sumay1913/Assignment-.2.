#include <stdio.h>

int main() {
    int n = 5; // Number of rows

    for (int i = 0; i < n; i++) {
        char ch = 'A'; // Start with 'A' for each row
        for (int j = 0; j <= i; j++) {
            printf("%c ", ch); // Print the character
            ch++; // Move to the next character
        }
        printf("\n"); // Move to the next line
    }

    return 0;
}
