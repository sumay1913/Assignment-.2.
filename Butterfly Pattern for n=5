n = 5

# Upper part of the butterfly
for i in range(1, n + 1):
    # Left stars
    print('*' * i, end='')
    # Spaces
    print(' ' * (2 * (n - i)), end='')
    # Right stars
    print('*' * i)

# Lower part of the butterfly
for i in range(n - 1, 0, -1):
    # Left stars
    print('*' * i, end='')
    # Spaces
    print(' ' * (2 * (n - i)), end='')
    # Right stars
    print('*' * i)
